{
  "name": "swap-meet-react",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "devDependencies": {
    "concurrently": "^7.4.0"
  },
  "scripts": {
    "install:all": "npm install --workspaces",
    "dev": "concurrently -n SERVER,CLIENT -c auto \"npm run dev --workspace server\" \"npm start --workspace client\"",
    "start:server": "npm start --workspace server",
    "start:client": "npm start --workspace client",
    "seed": "npm run seed --workspace server",
    "build:client": "npm run build --workspace client"
  }
}
